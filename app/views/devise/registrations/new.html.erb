<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, class: "form-control" %>
    <%= f.input :email, autofocus: true %>
    <%= f.input :password, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
    <%= f.input :password_confirmation %>
    <h5>Check this box to receive our weekly newsletter with updates on these cases and other news:</h5>
    <%= f.input :subscribed, :label => false %>
    <%= gotcha %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
