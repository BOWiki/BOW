<%= form_tag search_path, method: :get do %>
  <div class="navbar-form navbar-left">
    <%= label_tag 'search' do %>
      <%= select_tag(:state_id, 
            options_from_collection_for_select(@state_objects, :id, :name), 
            prompt: "Filter By State",
            class: 'form-control') %>
    <% end %>
  </div>
  <div class="navbar-form navbar-left">
    <%= label_tag 'search' do %>
      <%= text_field_tag :query, params[:query], class: 'form-control', placeholder: 'Name, City or Keywords...' %>
    <% end %>
    <%= submit_tag "Search", class: "btn btn-primary search-btn" %>
  </div>
<% end %>